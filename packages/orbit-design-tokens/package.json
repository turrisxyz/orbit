{
  "name": "@kiwicom/orbit-design-tokens",
  "version": "1.3.1",
  "author": "Kiwi.com",
  "license": "MIT",
  "description": "Design tokens of Orbit design system.",
  "main": "lib/index.js",
  "module": "es/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/kiwicom/orbit.git",
    "directory": "packages/orbit-design-tokens"
  },
  "files": [
    "lib/*",
    "es/*",
    "package.json",
    "README.md",
    "output/*",
    "pages/*"
  ],
  "scripts": {
    "build:dictionary": "ts-node ./src/dictionary/build.ts",
    "build:lib": "tsc -p lib.json",
    "build:es": "tsc -p es.json",
    "build": "yarn build:dictionary && yarn build:lib && yarn copy:lib",
    "size:build": "yarn build:dictionary && yarn build:lib",
    "copy:lib": "copyfiles -u 1 'src/**/*.md' lib && copyfiles -u 1 'src/**/*.js.flow' lib",
    "copy:es": "copyfiles -u 1 'src/**/*.js.flow' es && copyfiles -u 1 'src/**/*.d.ts' es",
    "clean": "rimraf src/js lib es pages output",
    "test": "jest",
    "prebuild": "rimraf lib 'src/js/createTokens.*' 'src/js/defaultFoundation.*'",
    "prepublishOnly": "yarn build"
  },
  "keywords": [
    "orbit",
    "ui",
    "design",
    "tokens"
  ],
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "@types/lodash": "^4.14.181",
    "@types/ramda": "^0.27.1",
    "@types/xml": "^1.0.5",
    "copyfiles": "^2.4.1",
    "lodash": "^4.17.14",
    "style-dictionary": "^2.10.2",
    "ts-jest": "^27.1.4",
    "xml": "^1.0.1"
  },
  "dependencies": {
    "color2k": "^2.0.0",
    "ramda": "^0.27.1"
  }
}
